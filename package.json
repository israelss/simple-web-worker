{
  "name": "simple-web-worker",
  "version": "1.3.0",
  "description": "An utility to simplify the use of web workers.",
  "main": "dist/sww.min.js",
  "type": "module",
  "scripts": {
    "prebuild": "yarn lint-fix && yarn test && yarn integration",
    "build": "NODE_ENV=production node esbuild.config.js",
    "postbuild": "yarn check-es-version",
    "preintegration": "NODE_ENV=production node src/tests/integration/config/esbuild.config.sworker.js",
    "integration": "testcafe 'firefox:headless' src/tests/integration/*.test.js",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "dev": "node esbuild.config.dev.js",
    "test": "jest",
    "check-es-version": "yarn es-check es5 'dist/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/israelss/simple-web-worker.git"
  },
  "keywords": [
    "Web",
    "Worker",
    "Simple"
  ],
  "author": "Israel Sant'Anna <israel.santanna@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/israelss/simple-web-worker/issues"
  },
  "homepage": "https://github.com/israelss/simple-web-worker#readme",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "core-js": "3.21.1",
    "es-check": "^6.2.1",
    "esbuild": "^0.14.28",
    "esbuild-plugin-babel": "^0.2.3",
    "jest": "^27.5.1",
    "standard": "^16.0.4",
    "testcafe": "^1.18.4"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "src/helpers/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "src/createDisposableWorker.js",
      "src/index.js"
    ],
    "coverageProvider": "v8",
    "injectGlobals": false,
    "testMatch": [
      "**/tests/unit/**/*.test.js"
    ],
    "verbose": true
  },
  "standard": {
    "ignore": [
      "/src/tests/integration/config/sworker.js",
      "/src/tests/integration/config/*ests.js"
    ]
  }
}
